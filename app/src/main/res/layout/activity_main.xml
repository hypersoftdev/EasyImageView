<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.hypersoft.easyimageview.EasyImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        app:strokeWidth="15dp"
        app:strokeColor="@color/black"
        app:strokeGradientAngle="90"
        android:background="@android:color/transparent"
        app:selectionIcon="@drawable/ic_gallery_unselected"
        app:selectionIconSize="25dp"
        app:selectionIconPosition="top_right"
        app:iconPadding="7dp"
        app:flipVertically="true"
        app:flipHorizontally="true"
        app:enableRippleEffect="true"
        app:cornerRadiusTopRight="360"
        />



</androidx.constraintlayout.widget.ConstraintLayout>